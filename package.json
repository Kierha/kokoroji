{
  "name": "kokoroji-app",
  "version": "1.0.0",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web",
    "lint": "eslint .",
    "audit": "npm audit",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --coverage --detectOpenHandles",
    "test:dev": "dotenv -e .env.development -- jest",
    "test:prod": "dotenv -e .env.production -- jest",
    "clean:cache": "powershell -Command \"Remove-Item -Recurse -Force node_modules,package-lock.json; if (Test-Path .expo) { Remove-Item -Recurse -Force .expo }; npm install; npx expo start -c\""
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/datetimepicker": "8.4.1",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "@react-navigation/stack": "^7.4.4",
    "@supabase/supabase-js": "^2.50.5",
    "date-fns": "^4.1.0",
    "expo": "^53.0.20",
    "expo-application": "~6.1.5",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-device": "~7.1.4",
    "expo-image-picker": "~16.1.4",
    "expo-media-library": "~17.1.7",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "lucide-react-native": "^0.539.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.20.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-native": "^13.2.2",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "@types/react-native": "^0.72.8",
    "@types/testing-library__react-hooks": "^3.4.1",
    "dotenv": "^17.2.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.31.0",
    "eslint-config-expo": "^9.2.0",
    "jest": "^29.7.0",
    "jest-expo": "^53.0.9",
    "jest-junit": "^16.0.0",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  },
  "jest": {
    "preset": "jest-expo",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(png|jpg|jpeg|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "<rootDir>/jest.setup.ts"
    ],
    "setupFiles": [
      "<rootDir>/jest.mock.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "clover",
      "cobertura"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "junit.xml",
          "addFileAttribute": "true",
          "ancestorSeparator": " â€º ",
          "usePathForSuiteName": "true"
        }
      ]
    ]
  }
}
